<?xml version="1.0"?>

<PluginConfig>
  <SupportURL>http://forums.indigodomo.com/viewforum.php?f=TODO</SupportURL>

  <Field type="checkbox" id="collect_device_states" defaultValue="false">
    <Label>Report Device States:</Label>
    <Description> Present device states through the endpoint</Description>
  </Field>

  <Field type="checkbox" id="collect_variables" defaultValue="true">
    <Label>Report Variables:</Label>
    <Description> Present variables through the endpoint</Description>
  </Field>

  <Field id="separator1" type="separator" />

  <Field type="textfield" id="port" defaultValue="9176">
    <Label>Listen Port:</Label>
  </Field>
  <Field id="portHelp" type="label" fontSize="mini" alignWithControl="true">
    <Label>Endpoint port for presenting metrics (requires reload)</Label>
  </Field>

  <Field id="logLevel" type="menu" defaultValue="20">
    <Label>Event Logging Level:</Label>
    <List>
      <Option value="10">Debugging Messages</Option>
      <Option value="20">Informational Messages</Option>
      <Option value="30">Warning Messages</Option>
      <Option value="40">Error Messages</Option>
      <Option value="50">Critical Errors Only</Option>
    </List>
  </Field>
</PluginConfig>
